# Compliance DB (PostgreSQL) — audit trail
COMPLIANCE_DB_ENABLED=true
COMPLIANCE_DB_HOST=localhost
COMPLIANCE_DB_PORT=5432
COMPLIANCE_DB_NAME=girlycrea_compliance
COMPLIANCE_DB_USER=girlycrea_app
COMPLIANCE_DB_PASSWORD=change_me
COMPLIANCE_DB_SSL=false
COMPLIANCE_DB_SSLMODE=prefer

# Compliance mode (IMPORTANT)
# - COMPLIANCE_MODE=strict   : bloque HTML crawl si CGU non validées + respecte robots.txt + pas d'anti-bot
# - COMPLIANCE_MODE=permissive: autorise plus de choses (zone grise)
# - COMPLIANCE_MODE=off      : désactive garde-fous (RISQUE élevé)
COMPLIANCE_MODE=strict

# Data scope
# - minimal : analyse-only (prix/titre dispo). La création de produit est désactivée.
# - full    : autorise description/images (à éviter si source non autorisée)
COMPLIANCE_DATA_SCOPE=minimal

# Compliance crawl behavior
COMPLIANCE_ROBOTS_ENABLED=true
COMPLIANCE_USER_AGENT=GirlyCreaProductImporter/1.0
COMPLIANCE_DEFAULT_CURRENCY=EUR
COMPLIANCE_DEFAULT_AVAILABILITY=unknown

# Source policy (safe default)
SOURCE_POLICY_MODE=deny_by_default

